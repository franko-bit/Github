{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "es6"],  // Ensure 'dom' is included
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@figma/plugin-typings"]
  },
  "include": [
    "code.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
